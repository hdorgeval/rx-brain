    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest",
            "type": "node",
            "request": "launch",
            "protocol": "auto",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "stopOnEntry": false,
            "args": ["--runInBand", "--config=jestconfig.debug.json"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "tsc",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true
           
            

        }
    ]
}